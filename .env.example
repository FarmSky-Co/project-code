# Production Environment Variables for Coolify
# Coolify will automatically manage many of these

# Application settings
PYTHONPATH=/app
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# Streamlit Configuration (optimized for Coolify)
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_SERVER_ENABLE_CORS=false
STREAMLIT_SERVER_ENABLE_XSRF_PROTECTION=false
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# Database settings (use Coolify managed database or external)
DATABASE_URL=sqlite:///data/farmsky.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@postgres:5432/farmsky

# Redis settings (use Coolify Redis service)
REDIS_URL=redis://redis:6379/0

# Security settings (Coolify can generate these automatically)
SECRET_KEY=your-secret-key-change-this
JWT_SECRET=your-jwt-secret-change-this

# Application paths
MODEL_PATH=/app/models
DATA_PATH=/app/data
RESULTS_PATH=/app/results
LOG_PATH=/app/logs

# Logging
LOG_LEVEL=INFO

# Performance settings
MAX_WORKERS=4
CACHE_TTL=3600

# Feature flags
ENABLE_MODEL_TRAINING=true
ENABLE_DATA_GENERATION=true
ENABLE_BATCH_PROCESSING=true

# Coolify-specific settings
COOLIFY_APP_NAME=farmer-credit-scoring
COOLIFY_ENVIRONMENT=production